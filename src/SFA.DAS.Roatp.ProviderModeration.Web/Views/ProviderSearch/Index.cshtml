@using SFA.DAS.Roatp.ProviderModeration.Web.Infrastructure
@model SFA.DAS.Roatp.ProviderModeration.Web.Models.ProviderSearchSubmitModel

@{
    ViewBag.Title = "Search for an apprenticeship training provider";
    Layout = "_Layout";
}

@section BackLink
{
    <div class="govuk-breadcrumbs">
        <ol class="govuk-breadcrumbs__list">
            <li class="govuk-breadcrumbs__list-item">
                <a class="govuk-breadcrumbs__link" asp-action="Dashboard" asp-controller="Home">Dashboard</a>
            </li>
            <li class="govuk-breadcrumbs__list-item" aria-current="page">Search for an apprenticeship training provider</li>
        </ol>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_validationSummary" />
        <h1 class="govuk-heading-xl">Search for an apprenticeship training provider</h1>
        <form method="post" asp-route="@RouteNames.PostProviderDescription" enctype="multipart/form-data" novalidate data="@Model">
            <div esfa-validation-marker-for="Ukprn" class="govuk-form-group">
                <label class="govuk-label" asp-for="Ukprn">
                    UKPRN
                </label>
                <span asp-validation-for="Ukprn" class="govuk-error-message"></span>
                <input asp-for="Ukprn" class="govuk-input govuk-input--width-20" type="number" maxlength="8">
            </div>

            <div class="govuk-button-group">
                <button id="submit" type="submit" class="govuk-button">Search</button>
            </div>
        </form>
    </div>
</div>